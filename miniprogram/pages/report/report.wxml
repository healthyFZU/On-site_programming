<view>
			<view wx:if="{{month==01||month=='03'||month=='05'||month=='07'||month=='08'||month=='10'||month=='12'}}">
			<picker name="rq" mode="selector"  value="{{dd}}"  bindchange="bindDayChange" range="{{array1}}">
